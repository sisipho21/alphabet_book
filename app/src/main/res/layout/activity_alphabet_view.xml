<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlphabetViewActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:fontFamily= "casual"
        android:text="@string/alphabet_view_textview_label"
        android:textSize="20sp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/imageview_description"
        app:srcCompat="@drawable/slide01" />


    <Button
        android:id="@+id/button_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/overview_button_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_overview"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/first_button_label" />

        <Button
            android:id="@+id/button_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/last_button_label" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageButton_next"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageView"
        android:background="@drawable/next" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageButton_previous"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/imageView"
        android:background="@drawable/previous" />


</RelativeLayout>